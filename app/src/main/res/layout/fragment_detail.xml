<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.DetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:scaleType="centerCrop"
            android:contentDescription="Imagen1"
            android:src="@drawable/ajolotitologo"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/virtual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/realidad_aumentada"
            android:background="@drawable/btn_bg_ra"
            android:textSize="18sp"
            android:fontFamily="@font/metropolis_semibold"
            android:textColor="@color/white"
            android:padding="14dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/mainText"
            android:fontFamily="@font/metropolis_regular"
            android:text="¡Vive la experiencia de la Realidad Aumentada!\n\n Amantoli te permite visualizar el producto en 3D, así, podrás apreciar cómo se vería en tu hogar, negocio o en cualquier lugar."/>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mainText"
            android:text="Producto"
            android:textSize="14sp"
            android:fontFamily="@font/metropolis_regular"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="top"
                android:fontFamily="@font/metropolis_semibold"
                android:textColor="@color/mainText"
                android:text="$"
                />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500"
                android:fontFamily="@font/metropolis_semibold"
                android:textColor="@color/mainText"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/paise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="@font/metropolis_semibold"
                android:textColor="@color/mainText"
                android:text="00" />

        </LinearLayout>

            <TextView
                android:id="@+id/product_details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/metropolis_semibold"
                android:textColor="@color/mainText"
                android:text="Detalle" />

            <TextView
                android:id="@+id/product_full_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_regular"
                android:textColor="@color/mainText"
                android:justificationMode="inter_word"
                android:layout_marginVertical="5dp"
                android:text="Descripción a detalle del producto" />

            <TextView
                android:id="@+id/in_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/metropolis_semibold"
                android:textColor="@color/mainText"
                android:text="En existencia" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:background="@drawable/btn_bg_4"
                android:text="Agregar a la bolsa"
                android:textSize="16sp"
                android:fontFamily="@font/metropolis_semibold"
                android:textColor="@color/white"
                android:layout_marginBottom="20dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buy_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg_4"
                android:text="VOLVER"
                android:layout_marginHorizontal="50dp"
                android:textSize="16sp"
                android:fontFamily="@font/metropolis_semibold"
                android:textColor="@color/white"
                android:layout_marginBottom="4dp"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_baseline_info_24"
            android:text=" ¿Por qué no puedo usar la Realidad Aumentada?"
            android:fontFamily="@font/metropolis_semibold"
            android:textColor="@color/mainText"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Un requisito es contar con los Servicios de Google Play para RA (Realidad Aumentada). Tu dispositivo móvil tiene que ser compatible con esta caracterísitica. En caso de no ser compatible, no podrás hacer uso de la RA, sin embargo, podrás visualizar el producto en 3D."
            android:fontFamily="@font/metropolis_light"
            android:textColor="@color/mainText"
            android:justificationMode="inter_word"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_baseline_info_24"
            android:text=" ¿Cómo hago uso de la Realidad Aumentada?"
            android:fontFamily="@font/metropolis_semibold"
            android:textColor="@color/mainText"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Busca una superficie amplia donde el objeto pueda ser colocado. El objeto aparecerá y podrás interactuar con él. Visualiza cómo se vería en el lugar donde tienes pensado colocarlo."
            android:fontFamily="@font/metropolis_light"
            android:textColor="@color/mainText"
            android:justificationMode="inter_word"
            android:textSize="12sp"/>


    </LinearLayout>

</ScrollView>