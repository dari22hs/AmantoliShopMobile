<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ProductReviewActivity">

    <LinearLayout
        android:id="@+id/linearLayoutReviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/searchIv_ReviewsAct"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_back"
            app:tint="@color/mainText"
            />

        <TextView
            android:id="@+id/textViewReviews"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22dp"
            android:layout_weight="1"
            android:fontFamily="@font/metropolis_regular"
            android:gravity="center"
            android:text="@string/rese_as"
            android:textColor="@color/mainText"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:layout_marginEnd="5dp">

        <ImageView
            android:id="@+id/productImage_ProductReviewPage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/escul_mini_y_nos"
            android:layout_marginHorizontal="50dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="360dp"
        android:layout_marginHorizontal="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mini y Nos"
            android:textSize="16sp"
            android:fontFamily="@font/metropolis_semibold"
            android:textColor="@color/mainText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_4_8_de_5_13_calificaciones"
            android:textSize="14sp"
            android:fontFamily="@font/metropolis_semibold"
            android:textColor="@color/mainText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="400dp"
        android:layout_marginHorizontal="50dp">

        <RatingBar
            android:id="@+id/productRating_singleProduct"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="4.8"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:transformPivotX="0dp"
            android:transformPivotY="15dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="438dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Reseña 1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Franco Nava"
                    android:textSize="14sp"
                    android:fontFamily="@font/metropolis_semibold"
                    android:textColor="@color/mainText"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/incre_bles_detalles"
                        android:textSize="14sp"
                        android:fontFamily="@font/metropolis_bold"
                        android:textColor="@color/mainText"
                        android:paddingEnd="30dp"/>

                    <RatingBar
                        android:id="@+id/ratingCustomer1"
                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                        android:progressTint="#E3C507"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="5"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:transformPivotX="0dp"
                        android:transformPivotY="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ten_a_mis_dudas_pero_en_cuanto_las_vi_en_persona_se_not_la_calidad_y_sobretodo_los_detalles_lleg_a_mi_casa_sin_un_solo_rasgu_o_muy_recomendado"
                        android:textSize="14sp"
                        android:fontFamily="@font/metropolis_light"
                        android:textColor="@color/mainText"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="#B111F4"/>

            </LinearLayout>

            <!--Reseña 2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Iván Bernal"
                    android:textSize="14sp"
                    android:fontFamily="@font/metropolis_semibold"
                    android:textColor="@color/mainText"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/de_lo_mejor"
                        android:textSize="14sp"
                        android:fontFamily="@font/metropolis_bold"
                        android:textColor="@color/mainText"
                        android:paddingEnd="30dp"/>

                    <RatingBar
                        android:id="@+id/ratingCustomer2"
                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                        android:progressTint="#E3C507"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="4.8"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:transformPivotX="0dp"
                        android:transformPivotY="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/est_n_muy_bonitos_y_se_nota_la_dedicaci_n_quedaron_muy_bien_en_mi_jard_n"
                        android:textSize="14sp"
                        android:fontFamily="@font/metropolis_light"
                        android:textColor="@color/mainText"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="#B111F4"/>

            </LinearLayout>

            <!--Reseña 3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Miranda López"
                    android:textSize="14sp"
                    android:fontFamily="@font/metropolis_semibold"
                    android:textColor="@color/mainText"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nah_de_locos"
                        android:textSize="14sp"
                        android:fontFamily="@font/metropolis_bold"
                        android:textColor="@color/mainText"
                        android:paddingEnd="30dp"/>

                    <RatingBar
                        android:id="@+id/ratingCustomer3"
                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                        android:progressTint="#E3C507"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="5"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:transformPivotX="0dp"
                        android:transformPivotY="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pens_que_eran_m_s_chiquitos_pero_son_del_tama_o_perfecto_est_n_muy_bien_adornados"
                        android:textSize="14sp"
                        android:fontFamily="@font/metropolis_light"
                        android:textColor="@color/mainText"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="#B111F4"/>

            </LinearLayout>

            <!--Reseña 4-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eduardo Barbosa"
                    android:textSize="14sp"
                    android:fontFamily="@font/metropolis_semibold"
                    android:textColor="@color/mainText"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/la_neta_se_nota_la_dedicaci_n_que_le_pusieron_est_n_geniales"
                        android:textSize="14sp"
                        android:fontFamily="@font/metropolis_bold"
                        android:textColor="@color/mainText"
                        android:paddingEnd="30dp"/>

                    <RatingBar
                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                        android:progressTint="#E3C507"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="5"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:transformPivotX="0dp"
                        android:transformPivotY="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/los_iba_a_dar_como_regalo_pero_me_encantaron_y_me_los_qued_jajaja_ya_ped_otros_porque_est_n_preciosos_los_gatitos"
                        android:textSize="14sp"
                        android:fontFamily="@font/metropolis_light"
                        android:textColor="@color/mainText"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="#B111F4"/>

            </LinearLayout>

            <!--Reseña 5-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Karina Montes"
                    android:textSize="14sp"
                    android:fontFamily="@font/metropolis_semibold"
                    android:textColor="@color/mainText"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/los_am_ee"
                        android:textSize="14sp"
                        android:fontFamily="@font/metropolis_bold"
                        android:textColor="@color/mainText"
                        android:paddingEnd="30dp"/>

                    <RatingBar
                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                        android:progressTint="#E3C507"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="5"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:transformPivotX="0dp"
                        android:transformPivotY="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/est_n_del_tama_o_ideal_para_adornar_en_la_casa_o_el_jard_n_tienen_detalles_muy_bonitos"
                        android:textSize="14sp"
                        android:fontFamily="@font/metropolis_light"
                        android:textColor="@color/mainText"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="#B111F4"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/comparte_tu_opini_n_sobre_este_producto"
                    android:textColor="@color/mainText"
                    android:textSize="14sp"
                    android:fontFamily="@font/metropolis_bold"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnPostReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:text="@string/escribir_rese_a"
                    android:textSize="16sp"
                    android:fontFamily="@font/metropolis_semibold"
                    android:textColor="@color/mainText"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:background="@drawable/btn_bg_4"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>