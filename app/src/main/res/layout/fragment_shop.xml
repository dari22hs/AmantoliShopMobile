<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".Fragment.ShopFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/MainLayout_shopFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/coverRecView_shopFrag"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayout12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coverRecView_shopFrag">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/metropolis_semibold"
                    android:text="Categorías"
                    android:textColor="@color/mainText"
                    android:textSize="25sp" />

                <androidx.legacy.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/categories_GroupViewAll"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/metropolis_regular"
                    android:gravity="center"
                    android:text="Gran variedad"
                    android:textColor="@color/mainText"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <!--<androidx.recyclerview.widget.RecyclerView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/categoriesRecView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout12"/>-->

        <RelativeLayout
            android:id="@+id/categoriesRecView"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:rowCount="4"
                android:columnCount="2">

                <!-- CV 0 - 0 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvCategoryPottery"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal|center_vertical"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:id="@+id/ivPottery"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            app:cardCornerRadius="8dp"
                            android:src="@drawable/category_pottery"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alfarería"
                            android:textAlignment="center"
                            android:fontFamily="@font/metropolis_bold"
                            android:textColor="@color/mainText" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- CV 0 - 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal|center_vertical"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            app:cardCornerRadius="8dp"
                            android:src="@drawable/category_clothing"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ropa"
                            android:textAlignment="center"
                            android:fontFamily="@font/metropolis_bold"
                            android:textColor="@color/mainText" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- CV 1 - 0 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal|center_vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            app:cardCornerRadius="8dp"
                            android:src="@drawable/category_jewelry2"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Joyería"
                            app:cardCornerRadius="8dp"
                            android:textAlignment="center"
                            android:fontFamily="@font/metropolis_bold"
                            android:textColor="@color/mainText" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- CV 1 - 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        app:cardCornerRadius="8dp"
                        android:layout_gravity="center_horizontal|center_vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            app:cardCornerRadius="8dp"
                            android:src="@drawable/category_bags2"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bolsas"
                            android:textAlignment="center"
                            android:fontFamily="@font/metropolis_bold"
                            android:textColor="@color/mainText" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- CV 2 - 0 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:cardCornerRadius="8dp"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal|center_vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            app:cardCornerRadius="8dp"
                            android:src="@drawable/category_paintings"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pinturas"
                            android:textAlignment="center"
                            android:fontFamily="@font/metropolis_bold"
                            android:textColor="@color/mainText" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- CV 2 - 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal|center_vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/category_sculptures"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Esculturas"
                            android:textAlignment="center"
                            android:fontFamily="@font/metropolis_bold"
                            android:textColor="@color/mainText" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- CV 3 - 0 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:cardCornerRadius="8dp"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal|center_vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            app:cardCornerRadius="8dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/category_toys"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Juguetes"
                            android:textAlignment="center"
                            android:fontFamily="@font/metropolis_bold"
                            android:textColor="@color/mainText" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- CV 3 - 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:cardCornerRadius="8dp"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal|center_vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            app:cardCornerRadius="8dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/category_various"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Varios"
                            android:textAlignment="center"
                            android:fontFamily="@font/metropolis_bold"
                            android:textColor="@color/mainText" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>