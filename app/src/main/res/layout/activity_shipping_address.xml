<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ShippingAddressActivity">

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backIv_visualAc"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_back"
            app:tint="@color/mainText" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="22dp"
            android:layout_weight="1"
            android:fontFamily="@font/metropolis_regular"
            android:gravity="center"
            android:text="Direcciones de envío"
            android:textColor="@color/mainText"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />
    </LinearLayout>

    <!--RL DIRECCIÓN 1-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

    <LinearLayout
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección #1 - Trabajo"
            android:textSize="16sp"
            android:fontFamily="@font/metropolis_regular"
            android:textColor="@color/mainText"/>

        <CheckBox
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            android:checked="true"
            android:layout_width="30dp"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Predeterminada"
            android:textSize="14sp"
            android:fontFamily="@font/metropolis_regular"
            android:textColor="@color/mainText"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avenida de la Paz #76"
            android:textSize="14sp"
            android:fontFamily="@font/metropolis_light"
            android:textColor="@color/mainText" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Colonia Mexicaltzingo  -  C.P. 44390"
            android:textSize="14sp"
            android:fontFamily="@font/metropolis_light"
            android:textColor="@color/mainText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="58dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guadalajara, Jalisco, México"
            android:textSize="14sp"
            android:fontFamily="@font/metropolis_light"
            android:textColor="@color/mainText"/>

    </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="150dp"
        android:background="#B939DC"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp">

        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección #2 - Casa"
                android:textSize="16sp"
                android:fontFamily="@font/metropolis_regular"
                android:textColor="@color/mainText"/>

            <CheckBox
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="25dp"
                android:checked="false"
                android:layout_width="30dp"
                android:layout_height="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Predeterminada"
                android:textSize="14sp"
                android:fontFamily="@font/metropolis_regular"
                android:textColor="@color/mainText"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arenales #55"
                android:textSize="14sp"
                android:fontFamily="@font/metropolis_light"
                android:textColor="@color/mainText" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Colonia Arenales Tapatíos  -  C.P. 45066"
                android:textSize="14sp"
                android:fontFamily="@font/metropolis_light"
                android:textColor="@color/mainText"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="58dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zapopan, Jalisco, México"
                android:textSize="14sp"
                android:fontFamily="@font/metropolis_light"
                android:textColor="@color/mainText"/>

        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addAddress_ShippingPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_baseline_add_24" />

</RelativeLayout>