<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDialogAddAddress"
        app:cardBackgroundColor="@color/backgroundAd"
        app:cardElevation="8dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="220dp"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="end"
            android:gravity="end">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCloseAddressDialog"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_baseline_clear_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAGO DE PEDIDO"
                android:textAlignment="center"
                android:textColor="@color/mainText"
                android:textSize="20sp"
                android:fontFamily="@font/metropolis_regular" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="70dp">

            <!--Input Nombre clave-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etAddKeyName"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                android:hint="Total"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColor="@color/mainText"
                android:fontFamily="@font/metropolis_light"
                android:textSize="12sp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/metropolis_bold"
                    android:inputType="none"
                    android:text="$250 MXN"
                    android:textAlignment="center"
                    android:textColor="@color/mainText"
                    android:gravity="center"
                    android:editable="false"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etAddStreetAndNumber"
            android:layout_marginTop="130dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            android:hint="Nombre"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColor="@color/mainText"
            android:fontFamily="@font/metropolis_light"
            android:textSize="12sp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="14sp"
                android:text="Carlos Cisneros García"
                android:drawableEnd="@drawable/ic_edit_field"
                android:fontFamily="@font/metropolis_light"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!--Input Colonia y c.p.-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etSuburbAndPostalCode"
            android:layout_marginTop="190dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            android:hint="Número de tarjeta"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColor="@color/mainText"
            android:fontFamily="@font/metropolis_light"
            android:textSize="12sp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="14sp"
                android:text="4152 3138 2274 1000"
                android:drawableEnd="@drawable/ic_edit_field"
                android:fontFamily="@font/metropolis_light"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!--Input Tarjeta-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etCity"
            android:layout_marginTop="250dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="1dp"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            android:hint="Fecha de vencimiento"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColor="@color/mainText"
            android:fontFamily="@font/metropolis_light"
            android:textSize="12sp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="14sp"
                android:text="05/24"
                android:drawableEnd="@drawable/ic_edit_field"
                android:fontFamily="@font/metropolis_light"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="250dp"
            android:layout_marginStart="180dp"
            android:layout_marginEnd="1dp"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            android:hint="CVV"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColor="@color/mainText"
            android:fontFamily="@font/metropolis_light"
            android:textSize="12sp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="14sp"
                android:text="177"
                android:drawableEnd="@drawable/ic_edit_field"
                android:fontFamily="@font/metropolis_light"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!--Botón agregar-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnProceedToPayment"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="315dp"
            android:textSize="16sp"
            android:text="PROCEDER AL PAGO"
            android:onClick="openLink"
            android:fontFamily="@font/metropolis_bold"
            android:textColor="@color/mainText"
            android:background="@drawable/btn_bg_4" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>